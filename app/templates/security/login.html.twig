{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{# On charge Bootstrap CSS via CDN juste pour cette page #}
	<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	{# On charge Bootstrap Icons #}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

	<style>
		.login-section {
			min-height: 100vh;
			background-color: #fff;
		}

		/* Image de gauche : remplacez l'URL par la votre */
		.bg-image {
			background-image: url('https://images.unsplash.com/photo-1484807352052-23338990c6c6?q=80&w=2070&auto=format&fit=crop');
			background-size: cover;
			background-position: center;
		}

		.login-heading {
			font-weight: 300;
			letter-spacing: 2px;
			color: #333;
		}

		/* Personnalisation des champs */
		.form-control {
			border-radius: 2px;
			border: none;
			border-bottom: 2px solid #eee;
			padding-left: 0;
			background: transparent;
		}
		.form-control:focus {
			box-shadow: none;
			border-bottom-color: #333;
			background: transparent;
		}

		.btn-custom {
			background-color: #333;
			color: white;
			border-radius: 50px;
			padding: 10px 40px;
			letter-spacing: 1px;
			transition: all 0.3s;
		}
		.btn-custom:hover {
			background-color: #000;
			transform: scale(1.05);
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container-fluid p-0">
		<div class="row g-0 login-section">

			<div class="col-lg-7 d-none d-lg-block bg-image"></div>

			<div class="col-lg-5 d-flex align-items-center justify-content-center bg-white">
				<div class="w-75 p-5">

					<div class="mb-5">
						<h2 class="login-heading mb-3">ESPACE MEMBRE</h2>
						<p class="text-muted">Veuillez entrer vos identifiants.</p>
					</div>

					<form method="post">
						{% if error %}
							<div class="alert alert-danger rounded-0 border-0 shadow-sm mb-4">
								<i class="bi bi-exclamation-triangle-fill me-2"></i>
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						{% endif %}

						{% if app.user %}
							<div class="alert alert-light border shadow-sm mb-4">
								Connecté en tant que
								<strong>{{ app.user.userIdentifier }}</strong>.
								<a href="{{ path('app_logout') }}" class="text-dark">Sortir</a>
							</div>
						{% endif %}

						<div class="mb-4">
							<label for="inputEmail" class="form-label text-muted small text-uppercase">Email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Entrez votre email" autocomplete="email" required autofocus>
						</div>

						<div class="mb-4">
							<label for="inputPassword" class="form-label text-muted small text-uppercase">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez votre mot de passe" autocomplete="current-password" required>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<div class="d-flex justify-content-between align-items-center mb-5">
							<div class="form-check">
								<input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
								<label class="form-check-label text-muted small" for="_remember_me">Se souvenir</label>
							</div>
							<a href="#" class="small text-muted text-decoration-none">Mot de passe oublié ?</a>
						</div>

						<button class="btn btn-custom w-100 shadow" type="submit">
							SE CONNECTER
						</button>
					</form>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
